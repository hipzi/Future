version: "3"

services:
  mariadb:
    build: /home/hipzi/mariadb
    container_name: mariadb_container
    hostname: "mariadb"
    ports:
      - "3306:3306"
    volumes:
      - /home/hipzi/mariadb/mariadb-server.cnf:/etc/my.cnf.d/mariadb-server.cnf
      - data-volume:/var/lib/mysql
      - openrc-volume:/sys/fs/cgroup
    networks:
      - wordpress-network

networks:
  wordpress-network:

volumes:
  data-volume:
  openrc-volume:
